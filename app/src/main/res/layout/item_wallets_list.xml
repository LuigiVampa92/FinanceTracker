<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="java.lang.String" />
        <variable
            name="wallet"
            type="com.example.vladimir.financetracker.model.entity.Wallet" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@{wallet.selected ? @color/colorAccent : @android:color/white}">

        <TextView
            android:id="@+id/item_wallets_list_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="@{String.valueOf(wallet.balance)}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/headline_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/item_wallets_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{wallet.name}"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:ellipsize="marquee"
            app:layout_constraintTop_toBottomOf="@+id/item_wallets_list_balance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"/>

    </android.support.constraint.ConstraintLayout>
</layout>